  <!-- Custom Search Bar -->
  <div class="barra-busqueda-central barra-fija">
    <form action="/search" method="get">
      <input type="text" name="q" placeholder="¿Qué producto buscas?" aria-label="Buscar producto" oninput="buscarSugerencias(this.value)">
      <button type="submit">
